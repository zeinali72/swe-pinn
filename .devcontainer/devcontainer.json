{
  "name": "jax-ml-workspace",
  "containerName": "jax-ml-workspace",
  "shutdownAction": "none",

  // Build from the local Dockerfile
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile",
    "args": { "NO_CACHE": "1" }
  },

  // Pass extra environment settings
  "envFile": [ "devcontainer.env" ],

  // GPU & restart flags
  "runArgs": [ "--gpus=all", "--restart", "unless-stopped" ],

  // --- START: ADD THIS MOUNT ---
  "mounts": [
    // Mounts the host's .gitconfig file to the container to persist user identity
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig",
      "target": "/root/.gitconfig",
      "type": "bind"
    }
  ],
  // --- END: ADD THIS MOUNT ---

  "containerUser": "root",

  // Recommended VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers"
      ]
    }
  }
}